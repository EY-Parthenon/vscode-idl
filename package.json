{
    "name": "idl",
    "displayName": "IDL Interactive Data Language",
    "description": "IDL syntax highlighting and code snippets",
    "version": "1.3.0",
    "publisher": "CT6502",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/chris-torrence/vscode-idl"
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "contributors:init": "all-contributors init",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.0.0",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "all-contributors-cli": "^4.11.1"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "activationEvents": [
        "onLanguage:idl"
    ],
    "main": "./client/out/extension.js",
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/idlicon.png",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "idl",
                "aliases": [
                    "IDL",
                    "idl"
                ],
                "extensions": [
                    ".pro"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "task",
                "aliases": [
                    "Task",
                    "task"
                ],
                "extensions": [
                    ".task"
                ]
            },
            {
                "id": "style",
                "aliases": [
                    "Style",
                    "style"
                ],
                "extensions": [
                    ".style"
                ]
            },
            {
                "id": "model",
                "aliases": [
                    "Model",
                    "model"
                ],
                "extensions": [
                    ".model"
                ]
            }
        ],
        "grammars": [
            {
                "language": "idl",
                "scopeName": "source.idl",
                "path": "./syntaxes/idl.tmLanguage"
            },
            {
                "language": "task",
                "scopeName": "source.json",
                "path": "./syntaxes/json-task/JSON.tmLanguage"
            },
            {
                "language": "style",
                "scopeName": "source.json",
                "path": "./syntaxes/json-task/JSON.tmLanguage"
            },
            {
                "language": "model",
                "scopeName": "source.json",
                "path": "./syntaxes/json-task/JSON.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "idl",
                "path": "./snippets/idl.json"
            },
            {
                "language": "idl",
                "path": "./snippets/loops.json"
            },
            {
                "language": "idl",
                "path": "./snippets/conditionals.json"
            },
            {
                "language": "idl",
                "path": "./snippets/envi.json"
            },
            {
                "language": "idl",
                "path": "./snippets/objects.json"
            },
            {
                "language": "idl",
                "path": "./snippets/tests.json"
            }
        ]
    }
}
